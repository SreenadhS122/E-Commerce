<%- include('layouts/userheader.ejs') %>
                    <!-- User profile  -->
                    <section style="background-color: #eee;">
                      <form action="/editaddress/<%= user._id %>/<%= address %>" method="post">        
                        <div class="container py-5">
                        <div class="row">
                          <div class="col">
                            <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                              <ol class="breadcrumb mb-0">
                                <button type="submit" class="btn btn-primary">Update</button>
                              </ol>
                            </nav>
                          </div>
                        </div>
                        <div class="row">
                    
                          <div class="col-lg-12">
                            <div class="card mb-4">
                              <div class="card-body">
                                <div class="row">
                                  <div class="col-sm-3">
                                    <p class="mb-0">City</p>
                                  </div>
                                  <div class="col-sm-9">
                                    <input type="text" required="true" value="<%= address.split(" ")[0] %>" style="outline: none; border : none"  maxlength="20" name="city">
                                  </div>
                                </div>
                                <hr>

                                <div class="row">
                                  <div class="col-sm-3">
                                    <p class="mb-0">Street</p>
                                  </div>
                                  <div class="col-sm-9">
                                    <input type="text" required="true" value="<%= address.split(" ")[1] %>" style="outline: none; border : none"  maxlength="20" name="street">
                                  </div>
                                </div>
                                <hr>

                                <div class="row">
                                  <div class="col-sm-3">
                                    <p class="mb-0">Village</p>
                                  </div>
                                  <div class="col-sm-9">
                                    <input type="text" required="true" value="<%= address.split(" ")[2] %>" style="outline: none; border : none"  maxlength="20" name="village">
                                  </div>
                                </div>
                                <hr>

                                <div class="row">
                                  <div class="col-sm-3">
                                    <p class="mb-0">Postal Code</p>
                                  </div>
                                  <div class="col-sm-9">
                                    <input type="number" required="true" value="<%= address.split(" ")[3] %>" style="outline: none; border : none"  maxlength="6" name="postalcode">
                                  </div>
                                </div>

                              </div>
                            </div>
                          </div>
                        </div>
                      </form>
                      </div>
                    </section>

                    <!-- Content Row -->
                  </div>
            <!-- End of Main Content -->

<%- include('layouts/homefooter.ejs')  %>