<%- include('layouts/userheader.ejs') %>
                    <!-- User profile  -->
                    
                    <section style="background-color: #eee;">
                      <form action="/editprofile/<%= user._id %>" method="post">        
                        <div class="container py-5">
                          <% if (message) { %>
                            <div class="alert alert-danger" role="alert">
                            <%= message  %>
                            </div>
                            <% } %>
                        <div class="row">
                         
                          <div class="col">
                            <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                              <ol class="breadcrumb mb-0">
                                <button type="submit" class="btn btn-primary">Update</button>
                              </ol>
                            </nav>
                          </div>
                        </div>
                        <div class="row">
                    
                          <div class="col-lg-12">
                            <div class="card mb-4">
                              <div class="card-body">
                                <div class="row">
                                  <div class="col-sm-3">
                                    <p class="mb-0">Full Name</p>
                                  </div>
                                  <div class="col-sm-9">
                                    <input type="text" style="outline: none; border : none" value="<%= fullname %>" maxlength="20" name="fullname">
                                  </div>
                                </div>
                                <hr>
                                <div class="row">
                                  <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                  </div>
                                  <div class="col-sm-9">
                                    <input type="email" style="outline: none; border : none" value="<%= email %>" maxlength="20" name="email">
                                  </div>
                                </div>
                                <hr>
                                <div class="row">
                                  <div class="col-sm-3">
                                    <p class="mb-0">Mobile</p>
                                  </div>
                                  <div class="col-sm-9">
                                    <input type="text" style="outline: none; border : none" value="<%= mobile %>" maxlength="20" name="mobile">
                                  </div>
                                </div>
                                <hr>
                              </div>
                            </div>
                          </div>
                        </div>
                      </form>
                      </div>
                    </section>

                    <!-- Content Row -->
                  </div>
            <!-- End of Main Content -->

<%- include('layouts/homefooter.ejs')  %>