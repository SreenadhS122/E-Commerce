<%- include('layouts/homeheader')  %>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Offers</h6>
                        </div>
                        <div class="card-body">
                            <% if (message) { %>
                                <div class="alert alert-danger" role="alert">
                                <%= message  %>
                                </div>
                                <% } %>
                            <a href="/addoffer" class="btn btn-primary">Add Offer</a>
                            <div class="table-responsive">
                                <% if (viewoffer.length > 0) {%>
                                    <table class="table table-bordered" id="dataTable">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Discount</th>
                                                <th>Discription</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <%  viewoffer.forEach((element) => {%>
                                            <tr>
                                                <td><%= element.name %></td>
                                                <td><%= element.discount %>%</td>
                                                <td><%= element.discription %></td>
                                                <td>
                                                    <a href="/deleteoffer/<%= element._id %>" class="delete" ><i class="material-icons" data-toggle="tooltip"title="Delete">&#xE872;</i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                    <% } else { %>
                                        <h1>No Offer Available</h1>
                                    <% } %>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
<%- include('layouts/homefooter')  %>