<%- include('layouts/userheader.ejs') %>
                    <!-- User profile  -->
                    <section style="background-color: #eee;">
                      <form action="/changepassword" method="post">        
                        <div class="container py-5">
                        <div class="row">
                          <div class="col">
                            <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                              <ol class="breadcrumb mb-0">
                                <button type="submit" class="btn btn-primary">Update</button>
                              </ol>
                            </nav>
                          </div>
                        </div>
                        <% if(message){ %>
                        <div class="row">
                            <div class="alert alert-danger" role="alert">
                                <%= message  %>
                            </div>
                        </div>
                        <% } %>
                        <div class="row">
                    
                          <div class="col-lg-12">
                            <div class="card mb-4">
                              <div class="card-body">
                                <div class="row">
                                  <div class="col-sm-3">
                                    <p class="mb-0">Current Password</p>
                                  </div>
                                  <div class="col-sm-9">
                                    <input type="password" style="outline: none; border : none"  maxlength="20" name="currentpassword">
                                  </div>
                                </div>
                                <hr>
                                <div class="row">
                                  <div class="col-sm-3">
                                    <p class="mb-0">New Password</p>
                                  </div>
                                  <div class="col-sm-9">
                                    <input type="password" style="outline: none; border : none"  maxlength="20" name="password">
                                  </div>
                                </div>
                                <hr>
                                <div class="row">
                                  <div class="col-sm-3">
                                    <p class="mb-0">Confirm Password</p>
                                  </div>
                                  <div class="col-sm-9">
                                    <input type="password" style="outline: none; border : none" maxlength="20" name="confirmpassword">
                                  </div>
                                </div>
                                <hr>
                               
                              </div>
                            </div>
                          </div>
                        </div>
                      </form>
                      </div>
                    </section>

                    <!-- Content Row -->
                  </div>
            <!-- End of Main Content -->

<%- include('layouts/homefooter.ejs')  %>