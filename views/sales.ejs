
<body>
    <h1>Sales Report</h1>
                            <% if (userorder.length > 0) {%>
                                <table style="width: 100%;height: max-content; font-size: large;">
                                    <thead>
                                        <tr>
                                            <th>Customer Name</th>
                                            <th>Date</th>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Total</th>
                                            <th>Payment Method</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody style="margin-top: 10px;text-align: center;">
                                        <%  userorder.forEach((element) => {%>
                                        <tr  >
                                            <td><%= element.username %></td>
                                            <td><%= element.time %></td>
                                            <td><%= element.product.name %></td>
                                            <td><%= element.quantity %></td>
                                            <td><%= element.price %></td>
                                            <td><%= element.paymentmethod %></td>
                                            <td><%= element.status %></td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <h1>Currently No Sales</h1>
                                <% } %>
</body>

                            