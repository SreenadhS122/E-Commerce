<%- include('layouts/header.ejs')  %>
<style>
  .divider:after,
.divider:before {
content: "";
flex: 1;
height: 1px;
background: #eee;
}
.h-custom {
height: calc(100% - 73px);
}
@media (max-width: 450px) {
.h-custom {
height: 100%;
}
}
</style>
  <body class="vh-100">  
   <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
            class="img-fluid" alt="Sample image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <% if (message) { %>
                <div class="alert alert-<%= color %>"role="alert">
                <%= message  %>
                </div>
              <% } %> 
          <form action="/regotpverification" method="post">
            <div class="d-flex flex-row align-items-center justify-content-center ">
              <h2 style="color: rgba(0, 0, 0, 0.526)">OTP</h2>
            </div>
            <!-- Otp input -->
            <div class="form-outline mb-4 mt-4">
              <label class="form-label" for="form3Example3">OTP</label>
              <input type="text" id="form3Example3" class="form-control form-control-lg"
                placeholder="Enter OTP" name="otp" />
            </div>
            <p style="display: inline;">Expires in 00:</p>
            <p style="display: inline;" id="timer">60</p>
            <p style="display: inline;">seconds</p>
            <!-- Login  -->
            <div class="text-center text-lg-start mt-4 pt-2">
              <button type="submit" class="btn btn-primary btn-lg"
                style="padding-left: 2.5rem; padding-right: 2.5rem;">Register</button>
                <% if(timer){ %>
                   <a href="/resendotpreg/<%= email %>"
                   type="submit" class="btn btn-primary btn-lg"
                style="padding-left: 2.5rem; padding-right: 2.5rem;">Resend OTP
                </a>
                  <% } %>
               
              <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="/register"
                  class="link-danger">Register</a></p>
            </div>
  
          </form>
        </div>
      </div>
    </div>
    <script>
      let val = document.getElementById('timer').innerHTML;
      let time = setInterval(() => {
        val -= 1;
        document.getElementById('timer').innerHTML = val;
        if(val < 0){
          clearInterval(time);
          document.getElementById('timer').innerHTML = "Expired";
        }
      },1000);
    </script>
</body>
<%- include('layouts/footer.ejs') %>