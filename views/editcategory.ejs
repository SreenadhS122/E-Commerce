<%- include('layouts/homeheader.ejs') %>
<body class="vh-100" style="background-color: #eee;">
    <div>
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                  <% if (message) { %>
                    <div class="alert alert-danger" role="alert">
                    <%= message  %>
                    </div>
                    <% } %>
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit Category</p>
                  <form action="/editcategory/<%= viewcategory._id %>" method="post" class="mx-1 mx-md-4" enctype="multipart/form-data">
  
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">Category Name</label>
                        <input type="text" id="form3Example1c" class="form-control"  name="name" required="true" value="<%= name  %>" maxlength="30"/>
                      </div>
                    <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example4c">Description</label>
                        <input type="text" id="form3Example4c" class="form-control" name="description" required="true" value="<%=  description  %>" maxlength="30"/>
                    </div>

                    <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example4c">Image</label>
                        <input type="file" id="form3Example4c" class="form-control" name="image"  maxlength="30"/>
                       
                    </div>
                        <div style="height: 50px;width: 50px;"><img class="img-fluid" src="/newimg/resized/<%= image %>" alt=""></div>
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 mt-4">
                      <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                    </div>
                  </form>
                </div>

                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                    class="img-fluid" alt="Sample image">
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>
<%- include('layouts/homefooter.ejs') %>